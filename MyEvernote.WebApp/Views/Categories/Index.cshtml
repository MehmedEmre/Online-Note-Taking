@using MyEvernote.Entities
@model List<Category>

@{
    ViewBag.Title = "Index";
}

<style>
    tr {
        display: table-row;
        vertical-align: inherit;
        border-color: inherit;
    }

    .table {
        border-collapse: collapse;
        border-radius: 1em;
        overflow: hidden;
    }

    tbody {
        display: table-row-group;
        vertical-align: middle;
        border-color: inherit;
        background-color: #afcded;
    }



</style>

@{ 

    EvernoteUser user = null;


    if(Session["login"] != null)
    {

        user = Session["login"] as EvernoteUser;

    }


}


<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12">


            <!-- User profile -->
            <div class="panel panel-default mb-1">
                <div class="panel-heading">
                    <h2 class="panel-title">Kategori Yönetim Paneli</h2>
                </div>

                <div class="panel-body">


                    <div class="profile__header">


                    </div>


                </div>

            </div>



            <!-- User info -->

            <div class="panel panel-default">
                <div class="panel-heading">
                    <p>
                        @Html.ActionLink("Yeni Kategori Ekle", "Create",null, new { @class = "btn btn-success btn-sm" })
                    </p>
                </div>
                <div class="panel-body">
              


                    <table class="table table-hover table-bordered">


                        <thead class="thead-dark">


                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].Title)</th>
                                <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].Description)</th>
                                <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].CreatedOn)</th>
                                <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].ModifiedOn)</th>
                                <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].ModifiedUserName)</th>
                                <th scope="col">Seçenekler</th>
                            </tr>


                        </thead>

                        <tbody>


                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].CreatedOn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].ModifiedOn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].ModifiedUserName)
                                    </td>
                                    <td>

                                        @Html.ActionLink("Detay", "Details", new { id = Model[i].ID }, new { @class = "btn btn-info btn-sm" })|
                                        @Html.ActionLink("Düzenle", "Edit", new { id = Model[i].ID }, new { @class = "btn btn-warning btn-sm" }) |
                                        @Html.ActionLink("Sil", "Delete", new { id = Model[i].ID }, new { @class = "btn btn-danger btn-sm" })
                                    </td>
                                </tr>

                            }


                        </tbody>

                    </table>
                </div>
            </div>

        </div>

    </div>
</div>