@using MyEvernote.Entities.ValueObjects

@model LoginViewModel

<link href="~/Content/login_register.css" rel="stylesheet" />
<script src="~/js/login_register.js"></script>

<link href="~/css/all.min.css" rel="stylesheet" />
<script src="~/js/all.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

@{ Layout = ""; }


<div class="sidenav">
    <div class="login-main-text">
        <h2>Giriş Yap!</h2><br />
        <p>Hoşgeldin! Bizde seni bekliyorduk! Hızlıca giriş yap ve yeniden aramıza katıl!</p><br />
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12 mt-5">
        <div class="login-form">

            @if (ViewBag.valid == false)
            {
                @Html.ValidationSummary(false, "", new { @class = "alert alert-primary" })
            }


            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Uyarı</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Görünüşe göre henüz hesabını aktif etmedin. Elini çabuk tut ve hesabını aktif et!
                        </div>
                        <div class="modal-footer">
                            <a href="https://outlook.live.com/owa/" class="btn btn-primary">Outlook'a Git</a>
                        </div>
                    </div>
                </div>
            </div>


            @using (Html.BeginForm())
            {
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="username" class="col-sm-12 control-label">
                            Kullanıcı Adı
                        </label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı", id = "username" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-12  control-label">
                            Şifre
                        </label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifre", type = "password", id = "password" })
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-12">
                            <button type="submit" class="btn btn-primary btn-sm">
                                Giriş Yap
                            </button>
                            <button type="reset" class="btn btn-secondary btn-sm">
                                Sıfırla
                            </button>
                        </div>
                    </div>
                </form>
            }

        </div>
    </div>
</div>




<script>


    $(document).ready(function () {

        var returnElement = "@ViewBag.userIsNotActive"


        if (returnElement == "False") {

            $("#exampleModalCenter").modal("show")
        }


    })


</script>