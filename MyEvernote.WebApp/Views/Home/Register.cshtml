
@using MyEvernote.Entities.ValueObjects

@model RegisterViewModel

<link href="~/Content/login_register.css" rel="stylesheet" />
<link href="~/css/all.min.css" rel="stylesheet" />
<script src="~/js/all.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/RegisterAndLogin/RegisterAndLogin.js"></script>

@{ Layout = ""; }



<div class="sidenav">
    <div class="login-main-text">
        <h2>Kayıt Ol!</h2><br />
        <p>Kayıt Ol Ve Aramıza Katıl!</p><br />
    </div>
</div>
<div class="main mt-5">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">

            @if (ViewBag.valid == false)
            {
                @Html.ValidationSummary(false, "", new { @class = "alert alert-primary" })
            }

            @using (Html.BeginForm())
            {

                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="username" class="col-sm-12 control-label">
                            Kullanıcı Adı
                        </label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı", id = "username" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-12 control-label">
                            E-Mail
                        </label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-Mail", id = "email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-12 control-label">
                            Şifre
                        </label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifre", type = "password", id = "password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="repassword" class="col-sm-12 control-label">
                            Şifre Tekrar
                        </label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Repassword, new { @class = "form-control", placeholder = "Şifre Tekrar", type = "password", id = "repassword" })
                        </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-12">
                            <button id="login" type="submit" class="btn btn-primary btn-sm">
                                Kayıt Ol
                            </button>
                            <button type="reset" class="btn btn-secondary btn-sm">
                                Sıfırla
                            </button>
                        </div>
                    </div>
                </form>}

        </div>
    </div>
</div>
