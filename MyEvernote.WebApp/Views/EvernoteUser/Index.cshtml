@using MyEvernote.Entities
@model List<EvernoteUser>

<style>
    tr {
        display: table-row;
        vertical-align: inherit;
        border-color: inherit;
    }

    .table {
        border-collapse: collapse;
        border-radius: 1em;
        overflow: hidden;
    }

    tbody {
        display: table-row-group;
        vertical-align: middle;
        border-color: inherit;
        background-color: #afcded;
    }
</style>

@{

    EvernoteUser user = null;


    if (Session["login"] != null)
    {

        user = Session["login"] as EvernoteUser;

    }


}


<div class="container">
    <div class="row">
        <div class="col-xs-12">


            <!-- User profile -->
            <div class="panel panel-default mb-1">
                <div class="panel-heading">
                    <h2 class="panel-title">Kullanıcı Yönetim Paneli</h2>
                </div>

                <div class="panel-body">


                    <div class="profile__header">


                    </div>


                </div>

            </div>



            <!-- User info -->

            <div class="panel panel-default">
                <div class="panel-heading">
                    <p>
                        @Html.ActionLink("Yeni Kullanıcı Ekle", "Create", null, new { @class = "btn btn-success btn-sm" })
                    </p>
                </div>
                <div class="panel-body">

                    <div class="table-responsive-sm">

                        <table class="table table-sm table-hover table-bordered">


                            <thead class="thead-dark">


                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].Name)</th>
                                    <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].Surname)</th>
                                    <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].Username)</th>
                                    <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].Email)</th>
                                    <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].Country)</th>
                                    <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].myColor)</th>
                                    <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].isActive)</th>
                                    <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].isAdmin)</th>
                                    <th scope="col">@Html.DisplayNameFor(modelItem => modelItem[0].isBanned)</th>
                                    <th scope="col" class="col-3">Seçenekler</th>
                                </tr>


                            </thead>

                            <tbody>


                                @for (int i = 1; i < Model.Count; i++)
                                {
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model[i].Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model[i].Surname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model[i].Username)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model[i].Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model[i].Country)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model[i].myColor)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model[i].isActive)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model[i].isAdmin)
                                        </td>                              
                                        <td>
                                            @Html.DisplayFor(modelItem => Model[i].isBanned)
                                        </td>


                                        <td>

                                            @Html.ActionLink("Detay", "Details", new { id = Model[i].ID }, new { @class = "btn btn-info btn-sm" })|
                                            @Html.ActionLink("Düzenle", "Edit", new { id = Model[i].ID }, new { @class = "btn btn-warning btn-sm" }) |
                                            @Html.ActionLink("Sil", "Delete", new { id = Model[i].ID }, new { @class = "btn btn-danger btn-sm" })
                                        </td>
                                    </tr>

                                }


                            </tbody>

                        </table>

                    </div>

                </div>
            </div>

        </div>

    </div>
</div>